<!doctype html>
<html lang="en">
<head>
    {{> meta}}
    {{> title}}

    {{addLocalCSS  "/css/main.css" prepend=true hasOldIE=true}}
    {{addLocalCSS  "/css/main-grid.css" prepend=true hasOldIE=true}}
    {{addLocalCSS  "/css/rainbow/baby-blue.css"}}
    {{addRemoteCSS "https://fonts.googleapis.com/css?family=Raleway:200"}}

    {{> styles}}

    {{> html5shiv}}
    {{> analytics}}
</head>
<body>

    <script>{{{state}}}</script>

    <div id="layout">
        {{> menu}}

        <div id="main">

            {{{body}}}

            <div class="footer">
                {{> legal}}
            </div>
        </div>
    </div>

  {{#if yuiBoot}}
    {{> yui-boot}}
  {{/if}}

    {{addLocalJS "/js/ui.js"}}
    {{addLocalJS "/js/rainbow/rainbow.min.js"}}
    {{addLocalJS "/js/rainbow/language/generic.js"}}
    {{addLocalJS "/js/rainbow/language/html.js"}}
    {{addLocalJS "/js/rainbow/language/css.js"}}
    {{addLocalJS "/js/rainbow/language/javascript.js"}}
    {{addLocalJS "/js/rainbow/language/shell.js"}}

  {{#localJS}}
    <script src="{{{.}}}"></script>
  {{/localJS}}

</body>
</html>
