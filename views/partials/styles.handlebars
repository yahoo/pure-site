{{! Common styles used across multiple layouts }}

{{#if servePureLocally}}
<link rel="stylesheet" href="/css/pure/pure{{min}}.css">
{{else}}
<link rel="stylesheet" href="https://unpkg.com/purecss@{{pure.version}}/build/pure{{min}}.css" integrity="sha384-{{pure.sriHash}}" crossorigin="anonymous">
{{/if}}

{{#if includePureGR}}
<!--[if lte IE 8]>
  {{#if servePureLocally}}
    <link rel="stylesheet" href="/css/pure/grids-responsive-old-ie{{min}}.css">
  {{else}}
    <link rel="stylesheet" href="https://unpkg.com/purecss@{{pure.version}}/build/grids-responsive-old-ie{{min}}.css">
  {{/if}}
<![endif]-->
<!--[if gt IE 8]><!-->
  {{#if servePureLocally}}
    <link rel="stylesheet" href="/css/pure/grids-responsive{{min}}.css">
