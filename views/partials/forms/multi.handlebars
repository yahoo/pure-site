    <legend>Legend</legend>

    <div class='yui3-g-r'>
        <div class='yui3-u-1-3'>
            <label>First Name</label>
            <input type="text">
        </div>
        <div class='yui3-u-1-3'>
            <label>Last Name</label>
            <input type="text">
        </div>
