<tr data-row="media-query">
    <td class="pure-u-1-6">
        <input data-content="mq-key" class="mq-key pure-u-1"
               required type="text" placeholder="med" value="{{this.id}}">
    </td>
    <td class="pure-u-3-4">
        <input data-content="mq-value" class="mq-value pure-u-1"
               required type="text" placeholder="screen and (min-width: 48em)" value="{{this.mq}}">
    </td>
    <td class="pure-u-1-12">
        <button data-action="remove-mq" class="remove-mq pure-button">&times;</button>
    </td>
</tr>
